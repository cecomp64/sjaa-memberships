<div class="row">
  <div class="col-12">
    <h1>Roles</h1>
    <%= link_to "New role", new_role_path, class: 'btn btn-primary' %>
    <div class="table-responsive">
      <table class="table table-striped">
        <tr>
          <th>Name</th>
          <th>People</th>
          <th>Email</th>
          <th>Discord</th>
        </tr>
        <% @roles.each do |role| %>
          <tr>
            <td>
              <%= link_to "#{role.name} (#{role.short_name})" %>
            </td>
            <td>
              <% count = role.people.count %>
              <%= "#{count} #{'person'.pluralize(count)}" %>
            </td>
            <td>
              <%= role.email %>
            </td>
            <td>
              <%= role.discord_id %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
